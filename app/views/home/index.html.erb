<div id="home_contents">
	<div id="logo"></div>
	<div id="vocab_searchbox">
		Search for a GRE vocabulary word, and we'll find it in context for you!
		<% form_tag(search_path, :method => "get") do %>
		  <%= label_tag(:word, "Search for:") %>
		  <%= text_field_tag(:word) %>
		  <%= submit_tag("Search") %>
		<% end %>
	</div>
	<div id="play">
		Or give yourself a quick vocab review? You can create your own or choose from multiple premade wordlists.
		<br>
		<% for a in @wordlists %>
			<%= link_to a.name, a %>
		<% end %>
	</div>
</div>